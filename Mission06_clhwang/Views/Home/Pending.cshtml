@{
    //Title for the page
    ViewData["Title"] = "Pending";
}

@model List<ApplicationResponse>

<!--Creating the table with some bootstrap to make it look nice-->
<table class="table table-bordered table-striped">
    <thead class='font-weight-bold'>
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>
    <tbody>
        <!--Looping through to grab each of the elements for each entry-->
        @foreach (var y in Model)
            {
                <tr>
                    <td>@y.Category.CategoryName</td>
                    <td>@y.Title</td>
                    <td>@y.Year</td>
                    <td>@y.Director</td>
                    <td>@y.Rating</td>
                    <td>@y.Edited</td>
                    <td>@y.LentTo</td>
                    <td>@y.Notes</td>

                    <!--Routing the Edit and Delete Buttons to their respective entries-->
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@y.ApplicationId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@y.ApplicationId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>