@{
    ViewData["Title"] = "Delete Movie";
}
@model ApplicationResponse

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete @Model.Title ? </h3>

<form method="post" asp-controller="Home" asp-action="Delete">
    <a asp-controller="Home" asp-action="Pending" class="btn btn-primary">Cancel</a>
    <button type="submit">Delete</button>
    <input type="hidden" asp-for="ApplicationId"/>
</form>
