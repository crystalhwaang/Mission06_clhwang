@{
    ViewData["Title"] = "Movie Application";
}

@model Mission06_clhwang.Models.ApplicationResponse

<h1>Enter in a New Movie</h1>

<!--My form that connects to the database to add new movies-->
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="CategoryId">Category:</label>
        <!--Finding and showing the Category Name and hiding the Category ID for the user-->
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
        <!--Creating limited options for the user to choose from-->
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select a Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <br />
        <label asp-for="Edited"></label>
        <select asp-for="Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
        <br />

        <button type="submit">Submit Movie</button>

    </form>
</div>